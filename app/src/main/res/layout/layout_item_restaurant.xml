<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_res"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_restaurant"
        android:scaleType="centerCrop"
        android:src="@drawable/quan_an_viet"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_100sdp"/>

    <LinearLayout
        android:layout_above="@id/name_restaurant"
        android:alpha="0.8"
        android:background="@color/black"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="@dimen/_7sdp"
            android:textSize="@dimen/_14sdp"
            android:text="4.1"
            android:id="@+id/review_point"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_star_24"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"/>

    </LinearLayout>


    <TextView
        android:gravity="center_horizontal"
        android:layout_below="@id/img_restaurant"
        android:textSize="@dimen/_14sdp"
        android:text="Thé Giới Hải Sản - Mễ Trì"
        android:maxLines="1"
        android:id="@+id/name_restaurant"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:maxLines="1"
        android:gravity="center_horizontal"
        android:layout_below="@id/name_restaurant"
        android:text="79 Trần Hưng Đạo, Q. Hoàn Kiếm"
        android:textSize="@dimen/_12sdp"
        android:id="@+id/address_restaurant"
        android:textColor="@color/colorGray555"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:maxLines="1"
        android:gravity="center_horizontal"
        android:layout_below="@id/address_restaurant"
        android:text="Chuyên hải sản tươi sống"
        android:textSize="@dimen/_12sdp"
        android:id="@+id/introduce"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:maxLines="1"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_below="@id/introduce"
        android:text="Giảm tới 35%"
        android:textSize="@dimen/_12sdp"
        android:id="@+id/promotion"
        android:textColor="@color/red_Google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
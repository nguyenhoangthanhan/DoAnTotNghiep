<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutLikeReply"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_1sdp"
    android:orientation="horizontal"
    android:paddingTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_4sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgReplyUser"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_margin="@dimen/_5sdp"
        android:src="@drawable/img1" />

    <LinearLayout
        android:id="@+id/viewInfoReply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgReplyUser"
        android:background="@drawable/bg_reply_cmt"

        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp">

        <TextView
            android:id="@+id/txtReplyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Văn Quang"
            android:textColor="@color/colorGray111"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtReplyCmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn nói đúng"
            android:textColor="@color/colorGray555"
            android:textSize="@dimen/_11sdp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewInfoReply"
        android:layout_toEndOf="@id/imgReplyUser"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_10sdp">

        <TextView
            android:id="@+id/txtLikeReplyCmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Like"
            android:textColor="@color/colorGray444"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:textColor="@color/colorGray444"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/txtReply_Like_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorGray444"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/txtEditReplyMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="Sửa"
            android:textColor="@color/colorGray444"
            android:textSize="@dimen/_8sdp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txtDeleteReplyMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="Xóa"
            android:textColor="@color/colorGray444"
            android:textSize="@dimen/_8sdp"
            android:visibility="invisible" />

    </LinearLayout>
</RelativeLayout>
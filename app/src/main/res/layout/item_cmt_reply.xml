<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_4sdp"
    android:layout_margin="@dimen/_1sdp"
    android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgReplyUser"
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/img1" />

        <LinearLayout
            android:id="@+id/viewInfoReply"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"

            android:background="@drawable/bg_reply_cmt"
            android:layout_toRightOf="@id/imgReplyUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/colorGray111"
                android:id="@+id/txtReplyName"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Văn Quang" />

            <TextView
                android:id="@+id/txtReplyCmt"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/colorGray555"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bạn nói đúng" />
        </LinearLayout>


    <LinearLayout
        android:layout_toEndOf="@id/imgReplyUser"
        android:layout_below="@id/viewInfoReply"
        android:paddingStart="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/colorGray444"
            android:id="@+id/txtLikeReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Like" />

        <TextView
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/colorGray444"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - " />

        <TextView
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/colorGray444"
            android:id="@+id/txtReply_Like_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />

        <TextView
            android:visibility="invisible"
            android:layout_marginStart="@dimen/_10sdp"
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/colorGray444"
            android:id="@+id/txtEditReplyMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa" />

        <TextView
            android:visibility="invisible"
            android:layout_marginStart="@dimen/_10sdp"
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/colorGray444"
            android:id="@+id/txtDeleteReplyMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa" />

    </LinearLayout>
</RelativeLayout>
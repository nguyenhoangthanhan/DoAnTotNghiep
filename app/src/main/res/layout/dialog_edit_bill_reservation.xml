<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:text="@string/change_bill_reservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Thời gian"
                android:textColor="@color/blue2"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/txtTimeGo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="15:25:00 22/05/2021"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/txtChangeTimeGo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="Thay đổi"
                android:textColor="@color/colorGray333"
                android:textSize="@dimen/_12sdp" />
        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="@color/colorGraybbb" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Người lớn"
                android:textColor="@color/blue2"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/txtNumberAdults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/txtChangeNumberAdults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="Thay đổi"
                android:textColor="@color/colorGray333"
                android:textSize="@dimen/_12sdp" />
        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/colorGraybbb" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Trẻ em"
                android:textColor="@color/blue2"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/txtNumberChildren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/txtChangeNumberChildren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="Thay đổi"
                android:textColor="@color/colorGray333"
                android:textSize="@dimen/_12sdp" />
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/edtNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/notes" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/btnAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:textAllCaps="false" />

        <Button
            android:layout_marginStart="@dimen/_15sdp"
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textAllCaps="false" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>
</LinearLayout>
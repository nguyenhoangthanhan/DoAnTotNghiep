<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/colorGrayeee"
    android:orientation="vertical">

    <TextView
        android:textStyle="bold"
        android:background="@color/colorGrayeee"
        android:textSize="@dimen/_15sdp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác nhận đặt chỗ" />


    <TextView
        android:textStyle="italic"
        android:id="@+id/textView23"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/colorGray222"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin đặt chỗ" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhà hàng:"
                android:textColor="@color/colorGray333" />

            <TextView
                android:id="@+id/txtNameResReserDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:text="Nhà hàng thịt bò alask - Đương khang"
                android:textColor="@color/colorGray333" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_15sdp">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:textColor="@color/colorGray333" />

            <TextView
                android:id="@+id/txtAddrReserDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:text="Số 47 Nguyên Hồng, Đống Đa, Hà Nội"
                android:textColor="@color/colorGray333" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày đến:"
                android:textColor="@color/red_CC574D" />

            <TextView
                android:id="@+id/txtDateGoDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:text="25/05/2021"
                android:textColor="@color/colorGray333" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_15sdp">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giờ đến:"
                android:textColor="@color/red_CC574D" />

            <TextView
                android:id="@+id/txtTimeGoDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:text="12:30"
                android:textColor="@color/colorGray333" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số người lớn:"
                android:textColor="@color/red_CC574D" />

            <TextView
                android:id="@+id/txtNumberAdultsDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:text="5"
                android:textColor="@color/colorGray333" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số trẻ em:"
                android:textColor="@color/red_CC574D" />

            <TextView
                android:id="@+id/txtNumberChildrenDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:text="5"
                android:textColor="@color/colorGray333" />
        </TableRow>
    </TableLayout>

    <TableRow
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnConfirmReservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnCancelReservation"
            android:layout_marginLeft="15dp"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel" />
    </TableRow>
</LinearLayout>
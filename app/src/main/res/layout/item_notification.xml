<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp"
    android:id="@+id/item_notify_relative"
    android:background="#eee"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textStyle="bold"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"
        android:id="@+id/txtTittleNotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Khuyến mãi hot mùa dịch Covi 19" />

    <TextView
        android:textSize="12.5sp"
        android:layout_below="@id/txtTittleNotify"
        android:textColor="@color/colorGray444"
        android:id="@+id/txtContentNotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Giảm 15% các mặt hàng điện tử, giảm 5% sản phẩm camera probest 7.4XT, tặng tai nghe khi mua điện thoại Samsung galaxy S9" />

    <ImageView
        android:visibility="visible"
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/img_new_notify"
        android:layout_alignParentEnd="true"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:src="@drawable/ic_new" />
</RelativeLayout>
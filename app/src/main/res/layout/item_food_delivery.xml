<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/viewItemFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
        android:layout_margin="@dimen/_3sdp"
        android:id="@+id/imgAvtFood"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_diet" />

    <TextView
        android:layout_margin="@dimen/_3sdp"
        android:layout_toEndOf="@id/imgAvtFood"
        android:id="@+id/txtNameFood"
        android:textColor="@color/colorGray222"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sườn nướng" />

    <TextView
        android:textColor="@color/colorGray666"
        android:layout_margin="@dimen/_3sdp"
        android:layout_toEndOf="@id/imgAvtFood"
        android:layout_below="@id/txtNameFood"
        android:id="@+id/txtPriceFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="170.000đ" />

    <RelativeLayout
        android:id="@+id/viewAvailable"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txtAvailable"
            android:background="@drawable/bg_co_san"
            android:textColor="@color/green_4caf50"
            android:padding="@dimen/_5sdp"
            android:text="Có sẵn"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:visibility="invisible"
            android:id="@+id/txtUnavailable"
            android:background="@drawable/bg_het_mon"
            android:textColor="@color/red_050"
            android:padding="@dimen/_5sdp"
            android:text="Hết món"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/viewAddSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/imgRemoveToCart"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/ic_remove"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtNumberThisFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imgAddToCart"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:src="@drawable/ic_plus" />

    </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/line1dp_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@id/viewItemFood"
        android:background="@color/colorGrayaaa" />

</RelativeLayout>